---
export interface Props {
  href: string;
  title: string;
  description?: string;
  pubDate?: Date;
  categories?: string[];
  heroImage?: string;
}
const { href, title, description, pubDate, categories = [], heroImage } = Astro.props;
---
<article class="card overflow-hidden hover:bg-white/10 transition">
  <div class="w-full aspect-[16/9] bg-white/10 flex items-center justify-center text-white/50">
    {heroImage ? <img src={heroImage} alt={title} class="w-full h-full object-cover" loading="lazy" /> : "Image du projet"}
  </div>
  <div class="p-4">
    <div class="flex gap-2 mb-3">
      {categories.slice(0,2).map((c) => <span class="badge bg-white/10">{c}</span>)}
    </div>
    <a href={href} class="text-lg font-semibold hover:underline">{title}</a>
    {description && <p class="text-white/70 mt-1">{description}</p>}
    <div class="mt-3 flex items-center justify-between text-xs text-white/60">
      {pubDate && <time datetime={pubDate.toISOString()}>{pubDate.toLocaleDateString('fr-FR')}</time>}
      <a href={href} class="hover:underline">Read the article</a>
    </div>
  </div>
</article>
